{
    "defaultStacks": ["workflow"],
    "packages": {
        "workflow-frontend": {
            "type": "autoscaling",
            "data": {
                "port": 9000,
                "bucket": "workflow-dist",
                "publicReadAcl": false
            }
        }
    },
    "recipes": {
        "default": {
            "depends": ["uploadArtifacts", "deploy"]
        },
        "deploy": {
            "actionsBeforeApp": ["workflow-frontend.deploy"]
        },
        "uploadArtifacts": {
            "actionsBeforeApp": ["workflow-frontend.uploadArtifacts"]
        }
    }
}
