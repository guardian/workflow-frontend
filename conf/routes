# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Application
GET     /                                   controllers.Application.index
GET     /dashboard                          controllers.Application.dashboard
GET     /stubs                              controllers.Application.stubs

POST    /login                              controllers.Application.loginPost
GET     /login                              controllers.Application.login
GET     /redirect                           controllers.Application.openIdRedirect

# API
GET     /api/content                        controllers.Api.content
PUT     /api/content/:composerId             controllers.Api.putContent(composerId: String)

GET     /api/stubs                          controllers.Api.stubs
POST    /api/stubs                          controllers.Api.newStub
PUT     /api/stubs/:stubId                  controllers.Api.putStub(stubId: Long)
DELETE  /api/stubs/:stubId                  controllers.Api.deleteStub(stubId: Long)
POST    /api/stubs/:stubId                  controllers.Api.linkStub(stubId: Long, composerId: String)

# Admin
GET     /admin/                             controllers.Admin.index
GET     /admin/sections                     controllers.Admin.sections
POST    /admin/sections/add                 controllers.Admin.addSection
POST    /admin/sections/remove              controllers.Admin.removeSection

GET     /admin/status                       controllers.Admin.status
POST    /admin/status/add                   controllers.Admin.addStatus
POST    /admin/status/remove                controllers.Admin.removeStatus
POST    /admin/status/moveUp                controllers.Admin.moveStatusUp
POST    /admin/status/moveDown              controllers.Admin.moveStatusDown

POST    /fieldChange/*contentId             controllers.Application.fieldChange(field: String, value: String, contentId: String, user: Option[String])

# Management
GET     /management/healthcheck             controllers.Management.healthCheck

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
