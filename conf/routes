# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                   controllers.Application.index
GET     /content                            controllers.Application.content(filterBy: Option[String], filterValue: Option[String])

GET     /admin/                             controllers.Admin.index
GET     /admin/sections                     controllers.Admin.sections
POST    /admin/sections/add                 controllers.Admin.addSection
POST    /admin/sections/remove              controllers.Admin.removeSection


POST    /newWorkFlow                        controllers.Application.newWorkFlow()
POST    /fieldChange/*contentId             controllers.Application.fieldChange(field: String, value: String, contentId: String, user: Option[String])

# Management
GET     /management/healthcheck             controllers.Management.healthCheck

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
